	<DataGrid Items="Bind PlayerProfile.Party" Bounds="-270,-180,0,540,360">
		<Panel Style="MagicWindow" Anchor="$CenterX,$CenterY" Bounds="Bind DataGrid.WindowBounds" InnerMargin="4,4,4,4" Depth="0.3">
