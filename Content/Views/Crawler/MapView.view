				<Label Text="/" Alignment="Cascading" Font="Console" TextAlignment="Left" Bounds="0,4,7,10"/>
				<Label Text="Bind DataGrid.MaxHP" Font="Console" Alignment="Cascading" TextAlignment="Left" Bounds="0,4,24,10" Color="Bind DataGrid.HealthColor"/>
			</Panel>

			<Label Text="OK" Font="Console" Alignment="Vertical" TextAlignment="Center" Bounds="0,4,109,9"/>
		</Panel>
	</DataGrid>

</View>